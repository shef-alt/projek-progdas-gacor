{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile c++",
            "type": "shell",
            "command": "g++",
            "args" : [
                "-std=c++17",
                ".\\src\\*.cpp",
                "-o",
                ".\\bin.\\Main.exe",
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": ".\\bin\\Main",
            "dependsOn": ["compile c++"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}